# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Application Configuration
VITE_APP_NAME="نظام إدارة شركة التنظيف المنزلي"
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_UPLOAD_MAX_SIZE=5242880

# Map Configuration (Optional - for location services)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Notification Configuration (Optional)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_MODE=true

# Security Configuration
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5

# File Upload Configuration
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
VITE_MAX_IMAGE_SIZE=2097152

# Report Configuration
VITE_REPORTS_TIMEZONE=Asia/Riyadh
VITE_CURRENCY_SYMBOL=ج.م
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm

# Company Default Settings
VITE_DEFAULT_WORKING_HOURS_START=08:00
VITE_DEFAULT_WORKING_HOURS_END=18:00
VITE_DEFAULT_ORDER_PREFIX=ORD
VITE_DEFAULT_TRANSPORT_RATE=1.5
